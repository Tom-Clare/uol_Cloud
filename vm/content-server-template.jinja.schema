info:
  title: content server template schema
  author: Thomas Clare
  description: Restrictins for parameters given to the content server template
  version: 1.0

imports:
- path: content-server-template.jinja

required:
- zone
- disk

properties:
  zone:
    type: string
    description: describes the zone th resources will be deployed in
  disk:
    type: string
    description: disk used to store website content for delivery (reference using selfLink)