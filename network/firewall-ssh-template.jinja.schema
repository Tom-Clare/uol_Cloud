info:
  title: firewall template schema
  author: Thomas Clare
  description: Restrictins for parameters given to the SSH firewall template
  version: 1.0

imports:
- path: firewall-ssh-template.jinja

required:
- network
- IPProtocol

properties:
  network:
    type: string
    description: the network that the firewall resides on and applies rules to
  IPProtocol: 
    type: string
    description: Select between TCP or UDP